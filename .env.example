# Kick OAuth Credentials
# Get these from https://kick.com/dashboard/oauth
KICK_CLIENT_ID=your_kick_client_id
KICK_CLIENT_SECRET=your_kick_client_secret

# User credentials (populated after OAuth login)
KICK_USER_ID=your_user_id
KICK_USERNAME=your_username
KICK_ACCESS_TOKEN=your_access_token
KICK_REFRESH_TOKEN=your_refresh_token

# ElevenLabs API Key
# Get from https://elevenlabs.io/
ELEVENLABS_API_KEY=your_elevenlabs_api_key

# ===========================================
# CONFIGURATION - Safe to customize
# ===========================================

# Server/Webhook URL (your public URL for Kick webhooks)
# Use ngrok for local development: ngrok http 5050
WEBHOOK_URL=https://your-domain.com/webhook

# ElevenLabs TTS Settings
ELEVENLABS_VOICE_ID=EXAVITQu4vr4xnSDxMaL
ELEVENLABS_MODEL_ID=eleven_flash_v2
ELEVENLABS_STABILITY=0.5
ELEVENLABS_SIMILARITY_BOOST=0.75
ELEVENLABS_STYLE=0.1

# Channel Points Config
POINTS_PER_MINUTE=5
POINTS_PER_CHAT=25
POINTS_COST_SAY=500

# AI Chat Bot Config
PROJECT_DIRECTORY=/path/to/your/project
AI_ENABLED=true

